<div class="album py-5 bg-dark">
  <div class="container">
    <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <h1><%= project.title %></h1>
          <div class="card-body">
            <p class="card-text"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
