                <% if user_signed_in? %>
                  <button type="button" class="btn btn-sm btn-outline-secondary" style="color:#666666"><%= link_to 'Edit', edit_project_path(project) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
