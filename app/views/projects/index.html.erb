<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Projects</h1>
    <p class="lead text-muted">Hi! Welcome to the page! Feel free to take a look around at any projects that catch your eye. You can also feel free to add your 
    own projects if you wish. Contact details and information about myself can be found in the drop down menu above. You can see all projects below.</p>
  </div>
</section>

<div class="album py-5">
  <div class="container">
    <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <h1 style="margin-left: 20px; margin-top: 10px"><%= project.title %></h1>
          <div class="card-body">
            <p class="card-text" style="margin-left: 5px; overflow=hidden;"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary" ><%= link_to 'View', project %></button>
                <% if user_signed_in? %>
                  <button type="button" class="btn btn-sm btn-outline-secondary" style="color:#666666" onclick="window.location.href='<%= edit_project_path(project) %>'">Edit</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


